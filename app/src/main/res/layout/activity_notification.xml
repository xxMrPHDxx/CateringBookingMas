<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Notification">

    <!-- Bottom bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_bottom"
        android:layout_alignParentBottom="true"/>

    <RelativeLayout
        android:id="@+id/Rl1"
        android:layout_width="500dp"
        android:layout_height="90dp"
        android:background="@drawable/bg_search">

        <ImageView
                android:id="@+id/imageViewNoti"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                app:srcCompat="@drawable/ic_notification2" />

        <TextView
            android:id="@+id/textView_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_bhai"
            android:padding="6dp"
            android:text="Hilmi Catering have a new menu!"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/imageViewNoti"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="430dp"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:background="@color/black"
        android:layout_below="@+id/Rl1"/>

    <RelativeLayout
        android:id="@+id/Rl2"
        android:layout_below="@+id/Rl1"
        android:layout_width="500dp"
        android:layout_height="90dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_search">

        <ImageView
                android:id="@+id/imageViewNoti1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                app:srcCompat="@drawable/ic_notification2" />

        <TextView
            android:id="@+id/textView_img1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_bhai"
            android:padding="6dp"
            android:text="Claim your voucher from AJ Catering"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/imageViewNoti1"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </RelativeLayout>

    <View
        android:id="@+id/divider1"
        android:layout_width="430dp"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:background="@color/black"
        android:layout_below="@+id/Rl2"/>

</RelativeLayout>